<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
    <link>
        <% include ../partials/linksHeader %>
  </link>
  </head>
  <body>
    <header>
        <% include ../partials/header %>
      </header>
      <div class="container">
        <h3> Add  New Opening: </h3>
        <% if ( typeof(mssg) !=="undefined"){ %>
          <span style="color: red;"><%= mssg %></span>
      <% } %>
    <form action="/opening/addNew" method="POST">
      <div class="form-group">
        Project Name: 
        <input type="text" class="form-control" name="projName">
      </div>
      <div class="form-group">
         Client  Name:<input type="text" class="form-control" name="clientName">
      </div>
      <div class="form-group">
        Technologies: <input type="text" class="form-control" name="technologies">
      </div>
      <div class="form-group">
        Role: <input type="text" class="form-control" name="role">
      </div>
      <div class="form-group">
        Job Description: <input type="text" class="form-control" name="jobDesc">
      </div>
      <div class="form-group">
        Status: <select name="status" class="form-control" >
          <option value="open">Open</option>
          <option value="closed">Close</option>
        </select>
      </div>
      <!-- <div class="form-group">
        Created By: <input class="form-control" type="text" name="createdBy">
      </div> -->
          
        <input type="submit" value="Submit">
      </form>
    </div>
  </body>
</html>
